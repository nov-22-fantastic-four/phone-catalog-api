generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Phone {
  id                String        @id
  name              String
  namespaceId       String
  capacityAvailable String[]
  capacity          String
  colorsAvailable   String[]
  priceRegular      Int
  priceDiscount     Int
  color             String
  images            String[]
  description       Description[]
  screen            String
  resolution        String
  processor         String
  ram               String
  camera            String
  zoom              String
  cell              String[]
}

model Description {
  id      Int      @id @default(autoincrement())
  phoneId String
  title   String
  text    String[]
  phone   Phone    @relation(fields: [phoneId], references: [id])
}

model Product {
  id        Int    @id @default(autoincrement())
  category  String
  itemId    String
  name      String
  fullPrice Float
  price     Float
  screen    String
  capacity  String
  color     String
  ram       String
  year      Int
  image     String
}
